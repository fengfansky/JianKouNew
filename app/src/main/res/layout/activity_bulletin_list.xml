<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ededed"
    tools:context="${relativePackage}.${activityClass}" >

    <co.herxun.impp.view.AppBar
        android:id="@+id/bulletin_app_bar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/no1" />

    <co.herxun.impp.view.BulletinView
        android:id="@+id/bulletinView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/bulletin_app_bar" >
    </co.herxun.impp.view.BulletinView>

    <TextView
        android:id="@+id/noBulletinLabel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:background="#ededed"
        android:gravity="center_horizontal"
        android:text="@string/no_annou_bulletin"
        android:textColor="@color/no9"
        android:textSize="16sp"
        android:visibility="gone" />

</RelativeLayout>